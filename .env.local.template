# Local Development Environment Variables
# Copy this file and rename to .env.local, then fill in your actual values

# Database Configuration (for local development - use your own PostgreSQL)
# For Vercel deployment, these will be auto-populated when you connect a Vercel Postgres database
POSTGRES_URL="postgresql://username:password@localhost:5432/funny_news_db"
POSTGRES_PRISMA_URL="postgresql://username:password@localhost:5432/funny_news_db"
POSTGRES_URL_NON_POOLING="postgresql://username:password@localhost:5432/funny_news_db"
POSTGRES_USER="your-postgres-user"
POSTGRES_HOST="localhost"
POSTGRES_PASSWORD="your-postgres-password"
POSTGRES_DATABASE="funny_news_db"

# Google AI API Key (for enhanced story summaries and categorization)
# Get your free API key from: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY="your-actual-google-ai-api-key-here"

# Application Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"